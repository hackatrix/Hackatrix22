<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.doapps.me.smily.MainActivity$PlaceholderFragment" >

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <ImageView
		        android:id="@+id/imgUsuario"
		        android:layout_width="0dp"
		        android:layout_height="90dp"
		        android:layout_alignParentLeft="true"
		        android:src="@drawable/ic_launcher"
		        android:layout_alignParentTop="true" 
		        android:layout_weight="4"/>
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3">
        	<TextView 
        	    android:layout_marginTop="5dp"
        	    android:id="@+id/txtNUmFotos"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="1"
        	    android:textSize="30dp"
        	    android:textStyle="bold|italic"
        	    android:text="3"
        	    android:gravity="center_horizontal"/>
        	<TextView 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="1"
        	    android:textStyle="bold|italic"
        	    android:text="Fotos"
        	    android:gravity="center_horizontal"/>
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3">
        	<TextView 
        	    android:layout_marginTop="5dp"
        	    android:id="@+id/txtNUmSeguidores"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="1"
        	    android:textSize="30dp"
        	    android:textStyle="bold|italic"
        	    android:text="15"
        	    android:gravity="center_horizontal"/>
              <TextView 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="1"
        	    android:textStyle="bold|italic"
        	    android:text="Seguidores"
        	    android:gravity="center_horizontal"/>
        </LinearLayout>
        
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3">
            <TextView 
        	    android:layout_marginTop="5dp"
        	    android:id="@+id/txtNUmSeguidores"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="1"
        	    android:textSize="30dp"
        	    android:textStyle="bold|italic"
        	    android:text="10"
        	    android:gravity="center_horizontal"/>
			<TextView 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:lines="1"
        	    android:textStyle="bold|italic"
        	    android:text="Aportes"
        	    android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <TextView 
        android:layout_margin="2dp"
        android:id="@+id/txtNomUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:text="Angel Espinoza"/>
    <TextView 
        android:layout_marginTop="5dp"
        android:id="@+id/txtMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Una Foto vale mas que mil Palabras...!! C:"/>
    <TextView 
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fotos:"/>  
     <!-- ScrollView con las fotos del usuario -->
     
     <HorizontalScrollView 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
	         <ImageView 
	             android:layout_width="80dp"
	             android:layout_height="80dp"
	             android:scaleType="fitXY"
	             android:src="@drawable/ic_launcher"/>
         </LinearLayout>
     </HorizontalScrollView>
     <TextView 
         android:layout_marginTop="10dp"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Invitar:"/>
     <ListView 
         android:layout_marginTop="5dp"
         android:id="@+id/listAmigos"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"/>
</LinearLayout>
